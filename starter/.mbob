name: app
src: src
dest: build

before: mkdir -p $dest

build: {

  css: {
    build: node-sass --output-style compressed $in $out
    dev: node-sass --source-map-contents --source-map-embed $in -w $out
    entry: {
      in: $src/index.scss
      out: $dest/$name.css
    }
  }

  html: {
    build: cp $src/*.html $dest
    watch: $src/*.html
  }

  js: {
    build: browserify -p [ minifyify --compressPath . --no-map ] -t babelify $in -o $out
    dev: watchify -v -d -t babelify $in -o $out
    entry: {
      in: $src/index.js
      out: $dest/$name.js
    }
  }
}

serve: {
  from: $dest
  port: 3000
  reload: [
    $dest/*.js
  ]
  reloadCSS: [
    $dest/*.css
  ]
}
